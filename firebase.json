{
  "hosting": {
    "site": "mezzi-advisors",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/**/*.@(js|css|jpg|jpeg|gif|ico|png|svg|woff|woff2|ttf|eot)",
        "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }]
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
